{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/gqrx-scanner",
            "args": ["-h", "localhost", 
                    "-p", "7356", 
                    "--min", "431000000", 
                    "--max", "432000000",
                    "-d 2"],//, "--tags", "\"TAG1|TAG2|TAG3\"" ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
